<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.smals.research.bulksign.desktopapp.controllers.MainController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <GridPane GridPane.columnIndex="1">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="selectFileButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSignFileButtonAction" text="Sign File" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets left="12.0" right="12.0" />
               </GridPane.margin></Button>
            <Button fx:id="signFileButton" defaultButton="true" layoutX="10.0" layoutY="43.0" mnemonicParsing="false" onAction="#handleSelectFileButtonAction" prefHeight="25.0" prefWidth="99.0" text="Select a file...">
               <GridPane.margin>
                  <Insets left="12.0" right="12.0" />
               </GridPane.margin>
            </Button>
            <Label fx:id="selectedFileLabel" text="No file selected" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="12.0" />
               </GridPane.margin>
            </Label>
         </children>
      </GridPane>
   </children>
</GridPane>
